<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.Views.VideoLibrary"
            xmlns:vdo="clr-namespace:InTheHand.Forms;assembly=InTheHand.Forms"
             Title="InHead Library">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Stretch" Clicked="Button_Clicked"/>
            <vdo:MediaElement HorizontalOptions="Fill" BackgroundColor="Green" VerticalOptions="Center" 
                              HeightRequest="180" x:Name="Media" IsLooping="True"  AreTransportControlsEnabled="true" 
                              Source="http://clips.vorwaerts-gmbh.de/big_buck_bunny.mp4"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>